@{ ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .bg-title-product {
        background: #00ff90;
        border-radius: 5px;
        margin: 20px 0;
    }

        .bg-title-product h3 {
            padding: 10px 20px;
            font-family: 'Times New Roman', Times, sans-serif;
            text-align: center;
        }
</style>
<br />
<div class="row">
    <div class="col-md-8">
        @Html.Action("SlidePartial", "Home")
    </div>
    <div class="col-md-4">
        <img style="margin-top: 50px" src="~/HinhanhSP/logosub1.jpg" class="img-responsive" alt="" />
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>
<div>
    <img style="width:100%" class="img-responsive" src="~/HinhanhSP/banner1.jpg" />
</div>
<br />
<div class="spnoibat">
    <div class="row">

        <h3> SẢN PHẨM NỔI BẬT</h3>
        <div class="col-md-4">
            <img src="~/HinhanhSP/imgnoibat1.jpg" class="img-responsive" alt="" />
        </div>
        <div class="col-md-4">
            <img src="~/HinhanhSP/imgnoibat2.jpg" class="img-responsive" alt="" />
        </div>
        <div class="col-md-4">
            <img src="~/HinhanhSP/imgnoibat3.jpg" class="img-responsive" alt="" />
        </div>
    </div>
</div>
<div class="danhmuc">
    @Html.Action("DanhMucPartial", "DanhMuc")
</div>
<div class="row">

    @foreach (var item in Model)
    {
<div class="col-md-3 col-sm-6">
    <a href="@Url.Action("chitiet", new {@MaSP=item.MaSP })">
        <img src=@Url.Content("~/HinhanhSP/"+item.HinhAnh) class="img-responsive" alt="" width="400" height="400" />
    </a>
    <center>
        <h3>@item.TenSP</h3>
        <h3 style="color:red">Giá: @item.DonGiaBan</h3>
        <br />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSP = item.MaSP, @strURL = Request.Url.ToString() }))
        {
<input type="submit" value="Mua hàng" id="bgnGioHang" />                }
    </center>
</div>}
</div>
<div class="row">
    <h2> Tin tức sản phẩm</h2>
    <div class="col-md-8">
        Video
    </div>
    <div class="col-md-4">
        Tin tức
    </div>
</div>