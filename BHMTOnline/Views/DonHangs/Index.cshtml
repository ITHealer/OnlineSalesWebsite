@model IEnumerable<BHMTOnline.Models.DonDatHang>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Danh sách đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NguoiDung.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NguoiDung.SDT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NguoiDung.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NguoiDung.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayDat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayGiao)
    </td>
    <td>
        @if (item.TinhTrang == 1)
        {
<div style="color:red">Đang chờ xác nhận</div> }
                else
                {
<div style="color:red">Đã giao</div>}
    </td>
    <td>
        <button class="btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDDH }, new { @style = "color:white;" })
        </button>
        <button class="btn-primary">
            @Html.ActionLink("Hủy đơn", "Delete", new { id = item.MaDDH }, new { @style = "color:white;" })
        </button>
    </td>
</tr>}

</table>
